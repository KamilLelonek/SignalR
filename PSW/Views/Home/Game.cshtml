@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Game";
}

<div id="shape"></div>
<h2>Game</h2>

<div id="chat" class="container">
    <form class="form-inline" role="form" id="chat-form">
        <div class="form-group">
            <input type="text" id="message" class="form-control" placeholder="message" autofocus />
            <input type="button" id="sendmessage" value="Send" class="btn btn-info" />
        </div>
    </form>

    <input type="hidden" id="displayname" value="@Html.Raw(User.Identity.GetUserName())" />
    <ul id="discussion"></ul>
</div>

@section scripts {
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.3.min.js"></script>
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.0.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page, send messages and move shape.-->
    <script src="~/Scripts/hub.js"></script>
}